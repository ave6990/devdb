form(name='from_fgis')
	div
		label(class='label')
			='Организация поверитель:'
		input(type='text' name='tb_organisation' value='оренбургский')
	div
		label(class='label')
			='Год поверки:'
		input(type='text' name='tb_verification_year' value='2021')
	div
		label(class='label')
			='Регистрационный номер СИ:'
		input(type='text' name='tb_mi_type_number')
	div
		label(class='label')
			='Заводской номер СИ:'
		input(type='text' name='tb_mi_serial_number')
	div
		input(type='file' name='csv_file' id='file')
		input(type='button' name='btn_upload' value='Загурзить файл' class='button')
	div
		input(type='button' name='btn_from_fgis' value='Загурзить данные из ФГИС', class='button')
		input(type='button' name='btn_back' value='<<' class='button')
		input(name='tb_page', id='page_num')
		label(id='lbl_page')
		input(type='button' name='btn_forward' value='>>' class='button')
		input(type='button' name='btn_reset' value='Сбросить фильтры' class='button')

div(id='out_data')

script(src='https://code.jquery.com/jquery-3.5.1.min.js')
script(lang='javascript' src='https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.16.9/xlsx.min.js')
script(defer)
	include ../public/from_fgis.js
